

@foreach (var item in Model)
{
    <div class="col-sm-6 col-xs-12">
        <div class="mp-product">
            <input type="hidden" name="productID" value="@item.Id" />
            <a href="#" class="mp-product_img">
                <img src="~/img/@item.Images" alt="" />
            </a>
            <div class="mp-product_info">
                <div class="mp-product_code"></div>
                <h3 class="mp-product_name">
                    <a href="#" class="hvr-icon-wobble-horizontal">@item.Name</a>
                </h3>
                <div class="mp-product_text">
                    <p>@item.Description</p>
                    <p></p>
                </div>
                <div class="mp-product_price">kr @item.Price</div>
            </div>
        </div>
    </div>
}
