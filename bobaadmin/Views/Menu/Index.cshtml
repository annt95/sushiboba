@model IEnumerable<bobaadmin.Models.Menu>
@{
    ViewBag.Title = "Menu";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<script src="~/js/jquery-3.4.1.js"></script>
<script src="~/js/bootstrap.min.js"></script>
<script src="~/js/jquery.dataTables.min.js"></script>
<script src="~/js/dataTables.bootstrap.min.js"></script>
<section class="content-header">
    <h1>
        Menu
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Menu</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Manage menu</h3>
                </div>
                <div class="panel-body">
                    <a href="/menu/create" class="btn btn-primary">Thêm mới</a>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="menus" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th width="100px">Price</th>
                                <th width="50px">IsSushi</th>
                                <th width="50px">IsMilktea</th>
                                <th width="50px">Active</th>
                                <th width="100px">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                <td><center>@Html.DisplayFor(modelItem => item.Price)$</center></td>
                                <td>
                                    @if (item.Issushi == true)
                                    {
                                        <center>
                                            <label class="btn btn-success active">
                                                <span class="glyphicon glyphicon-ok"></span>
                                            </label>
                                        </center>

                                    }
                                    else
                                    {<center>
                                            <label class="btn btn-danger">
                                                <span class="glyphicon glyphicon-ok"></span>
                                            </label>
                                        </center>
                                    }

                                </td>
                                <td>
                                    @if (item.Ismilktea == true)
                                    {
                                        <center>
                                            <label class="btn btn-success active">
                                                <span class="glyphicon glyphicon-ok"></span>
                                            </label>
                                        </center>
                                    }
                                    else
                                    {<center>
                                            <label class="btn btn-danger">
                                                <span class="glyphicon glyphicon-ok"></span>
                                            </label>
                                        </center>
                                    }
                                </td>
                                <td>
                                    @if (item.Active == true)
                                    {
                                        <center>
                                            <label class="btn btn-success active">
                                                <span class="glyphicon glyphicon-ok"></span>
                                            </label>
                                        </center>
                                    }
                                    else
                                    {<center>
                                            <label class="btn btn-danger">
                                                <span class="glyphicon glyphicon-ok"></span>
                                            </label>
                                        </center>
                                    }
                                </td>

                                @*<td><img src="@item.Images" /></td>*@

                                <td><a href="Menu/Update/@item.Id">Update</a> | <a href="" onclick="Delete('@item.Id')">Delete</a></td>
                            </tr>
                            }
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>


<script>
    $(function () {
        $('#menus').DataTable(
            {
        "order": [[ 0, "desc" ]]
        }
        );
    });
    function Delete(id){
        var txt;
        var r = confirm("Are you sure you want to Delete?");
        if (r == true) {

            $.ajax(
            {
                type: "POST",
                url: '@Url.Action("Delete", "Menu")',
                data: {
                    id: id
                },
                error: function (result) {
                    alert("error");
                },
                success: function (result) {
                    if (result == true) {
                        var baseUrl="/Menu";
                        window.location.reload();
                    }
                    else {
                        alert("There is a problem, Try Later!");
                    }
                }
            });
        }
    }
</script>
