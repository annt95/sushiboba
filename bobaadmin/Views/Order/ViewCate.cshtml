@model IEnumerable<bobaadmin.Models.OrderView>
@{
    ViewBag.Title = "Menu";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<script src="~/js/jquery-3.4.1.js"></script>
<script src="~/js/bootstrap.min.js"></script>
<script src="~/js/jquery.dataTables.min.js"></script>
<script src="~/js/dataTables.bootstrap.min.js"></script>
<section class="content-header">
    <h1>
        Order
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Order</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Manage order</h3>
                </div>
                @*<div class="panel-body">
                        <a href="/menu/create" class="btn btn-primary">Thêm mới</a>
                    </div>*@
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="orders" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>OrderTime</th>
                                <th>CustomerName</th>
                                <th>CustomerPhone</th>
                                <th>TotalMoney</th>
                                <th>Address</th>
                                <th>Note</th>
                                <th>Status</th>
                                <th>ShippingType</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.ID)</td>
                                    <td>@Html.DisplayFor(modelItem => item.OrderTime)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CustomerPhone)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TotalMoney)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Note)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ShippingType)</td>
                                    <td>

                                        @if (item.Status == "Submitted")
                                        {
                                            <a href="Update/@item.ID">Confrim</a>
                                        }
                                        else if (item.Status == "Confirmed")
                                        {
                                            <a href="Update/@item.ID">Process</a>
                                        }
                                        else if (item.Status == "Processing")
                                        {
                                            <a href="Update/@item.ID">Picked</a>
                                        }
                                        else if (item.Status == "Picked")
                                        {
                                            <a href="Update/@item.ID">Completed</a>
                                        }
                                        | <a href="" onclick="Delete('@item.ID')">Delete</a>

                                    </td>
                                </tr>
                            }
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>


<script>
    $(function () {
        $('#orders').DataTable(
            {
        "order": [[ 0, "desc" ]]
        }
        );
    });
    function Delete(id){
        var txt;
        var r = confirm("Are you sure you want to Delete?");
        if (r == true) {

            $.ajax(
            {
                type: "POST",
                url: '@Url.Action("Delete", "Menu")',
                data: {
                    id: id
                },
                error: function (result) {
                    alert("error");
                },
                success: function (result) {
                    if (result == true) {
                        var baseUrl="/Order";
                        window.location.reload();
                    }
                    else {
                        alert("There is a problem, Try Later!");
                    }
                }
            });
        }
    }
</script>
